{
    "name": "where/saver.php",
    "type": "project",
    "version": "1.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Where",
            "email": "liuzhaowei55@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "ext-json": "*",
        "illuminate/database": "^7.30",
        "illuminate/validation": "^7.30",
        "league/flysystem": "^2.0",
        "monolog/monolog": "^2.2",
        "php-di/php-di": "^6.3",
        "slim/http": "^1.2",
        "slim/psr7": "^1.3",
        "slim/slim": "^4.7",
        "slim/twig-view": "^3.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpstan/phpstan": "^0.12.64",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "php-cs-fixer": "php-cs-fixer fix --dry-run",
        "phpstan": "phpstan analyse --memory-limit=-1",
        "test": "phpunit"
    }
}
